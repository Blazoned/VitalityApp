
@{
    ViewData["Title"] = "Challenge";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/css/Challenge.css">
<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>

<div class="dropdown" id="challengeTypeDropdown">
    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" id="challengeTypeDropdownButton">
        Selecteer Challenge Type
        <span class="caret"></span>
    </button>
    <span class="fa fa-address-book fa-2x"></span>
    <ul class="dropdown-menu" id="challengeTypeDropdownMenu">
        <li><a href="#">Hardlopen</a></li>
        <li><a href="#">Zwemmen</a></li>
        <li><a href="#">Wandelen</a></li>
    </ul>
</div>

<div class="form-group" id="vereiste1FormGroup">
    <label id="vereiste1Label">Afstand (Meter):</label>
    <input type="number" id="vereiste1Input" />
</div>

<div>
    <button type="button" class="btn btn-primary" id="isPubliekButton">Is Publiek</button>
</div>

<div>
    <button type="button" class="btn btn-primary" id="genereerWillekeurigeChallengeButton">Genereer Willekeurige Challenge</button>
</div>

<div>
    <label id="startTijdLabel">Start Tijd:</label>
    <input type="date" id="startTijd" />
</div>

<div class="dropdown" id="challengeHerhalingDropdown">
    <label id="challengeHerhalingLabel">Herhaal Challenge:</label>
    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" id="challengeHerhalingDropdownButton">
        Niet
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" id="challengeHerhalingDropdownMenu">
        <li><a href="#">Niet</a></li>
        <li><a href="#">Dagelijks</a></li>
        <li><a href="#">Wekelijks</a></li>
    </ul>
</div>

<div class="btn-group" id="socialMediaButtonGroup">
    <button type="button">Facebook</button>
    <button type="button" id="twitterButton">Twitter</button>
    <button type="button" id="whatsappButton">WhatsApp</button>
</div>

<div class="progress" id="difficultyProgress">
    <div class="progress-bar" role="progressbar" id="difficultyProgressBar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
        <label id="difficultyLabel">Medium</label>
    </div>
</div>

<div>
    <button class="btn btn-primary" type="button" id="accepteerChallengeButton">Accepteer Challenge</button>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#challengeTypeDropdownMenu li a").click(function () {
            $("#challengeTypeDropdownButton").html($(this).text() + ' <span class="caret"></span>');
        });
    });

    $(document).ready(function () {
        $("#challengeHerhalingDropdownMenu li a").click(function () {
            $("#challengeHerhalingDropdownButton").html($(this).text() + ' <span class="caret"></span>');
        });
    });

    $(document).ready(function () {
        var isGreen = true;
        $("#isPubliekButton").click(function () {
            if (isGreen) {
                $(this).css('background-color', 'red');
            }
            else {
                $(this).css('background-color', 'green');
            }
            isGreen = !isGreen;
        });
    });
</script>
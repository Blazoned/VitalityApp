                <!-- Setting 2 -->
                <button class="form-control-settings btn btn-success" type="button" data-public-listing=true>
                    <span class="settings-text">Stel Persoonlijke Data Beschikbaar</span>
                    <span class="fa fa-check fa-settings"></span>
                </button>

                <!-- Setting 3 -->
                <button class="form-control-settings btn btn-success" type="button" data-public-listing=true>
                    <span class="settings-text">Sta Gebruiker Uitdagingen Toe</span>
                    <span class="fa fa-check fa-settings"></span>
                </button>
            </div>
        </div>
    </div>
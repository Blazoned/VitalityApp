
@{
    ViewData["Title"] = "Instellingen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section  Css{ 
    <link rel="stylesheet" href="~/css/head-page.css" />
}

@section Scripts{
    <script src="~/js/settings.js" asp-append-version="true"></script>
}

    <div class="container-fluid">
        <div class="row">
            <!-- Button Group Containing The Different Settings-->
            <div class="btn-group-settings">

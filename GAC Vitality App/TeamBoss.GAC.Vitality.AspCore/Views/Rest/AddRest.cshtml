
@{
    ViewData["Title"] = "Rust Invoeren";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Css{
    <link rel="stylesheet" type="text/css" href="~/css/clockpicker.css">
}

@section Scripts{
    <script src="~/js/jquery-clockpicker.js"></script>
    <script type="text/javascript">
        $('.clockpicker').clockpicker();
    </script>
}


<div class="container row">
    <div class="form-group block-wrapper col-md-12 col-md-4">
        <a class="btn btn-primary backBtnGroup2" role="button" href="~/Rest/Index">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <br />
        <br />

        <div class="btn-group switch" id="status" data-toggle="buttons">
            <label class="btn btn-default switch-width btn-on btn-md active">
                <input type="radio" value="1" name="multifeatured_module[module_id][status]" checked="checked">
                <span class="fa fa-bed"></span>
            </label>
            <label class="btn btn-default switch-width btn-off btn-md">
                <input type="radio" value="0" name="multifeatured_module[module_id][status]">
                <span class="fa fa-pause"></span>
            </label>
        </div>

        <div class="input-group clockpicker">
            <input type="text" class="form-control" placeholder="Begintijd" readonly>
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-time"></span>
            </span>
        </div>
        <br />
        <div class="input-group clockpicker">
            <input type="text" class="form-control" placeholder="Eindtijd" readonly>
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-time"></span>
            </span>
        </div>
        <button type="button" class="btn btn-primary btn-block add-button"><span class="glyphicon glyphicon-plus"></span></button>
    </div>
</div>